{
	"name": "@natlibfi/melinda-record-matching",
	"description": "Melinda record matching modules for Javascript",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-matching-js",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-matching-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-matching-js.git"
	},
	"license": "MIT",
	"version": "4.3.4",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test": "npm run lint && npm run test:base",
		"test:base": "cross-env NODE_ENV=test nyc mocha --package ./package.json",
		"test:dev": "npm run lint:dev && npm run test:base && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"dev": "nodemon",
		"dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test nodemon",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src -w test-fixtures --exec 'npm run test:dev'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^9.1.1",
		"@natlibfi/marc-record-serializers": "^10.1.4",
		"@natlibfi/melinda-commons": "^13.0.18",
		"@natlibfi/sru-client": "^6.0.16",
		"debug": "^4.3.7",
		"isbn3": "^1.2.4",
		"moment": "^2.30.1",
		"natural": "^8.0.1",
		"uuid": "^11.0.3",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.25.9",
		"@babel/core": "^7.26.0",
		"@babel/node": "^7.26.0",
		"@babel/preset-env": "^7.26.0",
		"@babel/register": "^7.25.9",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.5",
		"@natlibfi/fixugen": "^2.0.12",
		"@natlibfi/fixugen-http-client": "^3.0.10",
		"@natlibfi/fixura": "^3.0.11",
		"babel-plugin-istanbul": "^6.1.1",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.5.0",
		"chai-as-promised": "^7.1.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.1",
		"mocha": "^11.0.1",
		"nodemon": "^3.1.7",
		"nyc": "^17.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"mocha": {
		"spec": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"require": [
			"@babel/register"
		],
		"inline-diffs": true,
		"maxDiffSize": 25000,
		"bail": true,
		"exit": true
	},
	"nodemonConfig": {
		"exec": "npm run test:dev",
		"watch": [
			"src/*",
			"test-fixtures/*"
		]
	},
	"nyc": {
		"exclude": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"reporter": [
			"text"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
